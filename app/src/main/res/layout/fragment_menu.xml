<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.MenuFragment">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Food Category"
        android:textSize="64sp"
        android:textColor="#F257B4"
        android:fontFamily="@font/justanotherhand"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/MenuDishesBtn"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/menu_btns"
        android:fontFamily="@font/justanotherhand"
        android:text="Dishes"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/MenuDessertBtn"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/menu_btns"
        android:fontFamily="@font/justanotherhand"
        android:text="Dessert"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/MenuDishesBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/MenuDishesBtn"
        app:layout_constraintTop_toBottomOf="@+id/MenuDishesBtn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/MenuSnacksBtn"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/menu_btns"
        android:fontFamily="@font/justanotherhand"
        android:text="Snacks"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/MenuDessertBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/MenuDessertBtn"
        app:layout_constraintTop_toBottomOf="@+id/MenuDessertBtn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/MenuDrinksBtn"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/menu_btns"
        android:fontFamily="@font/justanotherhand"
        android:text="Drinks"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/MenuSnacksBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/MenuSnacksBtn"
        app:layout_constraintTop_toBottomOf="@+id/MenuSnacksBtn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/FavoriteBtn"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/menu_btns"
        android:fontFamily="@font/justanotherhand"
        android:text="Favorites"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="@+id/MenuDrinksBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/MenuDrinksBtn"
        app:layout_constraintTop_toBottomOf="@+id/MenuDrinksBtn" />

    <ImageButton
        android:id="@+id/MenuBackBtn"
        android:layout_width="190dp"
        android:layout_height="90dp"
        android:layout_marginBottom="-1dp"
        android:background="#FFFFFF"
        android:scaleType="fitXY"
        android:src="@drawable/btnbackpic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>