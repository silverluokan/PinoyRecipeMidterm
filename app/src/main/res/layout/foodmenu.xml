<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_height="200dp">

    <ImageView
        android:id="@+id/FoodImg"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/adobo" />

    <TextView
        android:id="@+id/FM_FoodNames"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/julee"
        android:text="Ensaymada"
        android:textColor="#000000"
        android:textSize="35dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/FoodImg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/FM_FoodDescriptions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/julee"
        android:text="In the Philippines, TAHO vendors are an essential morning presence. This traditional breakfast consists of tofu and tapioca pearls in sweet syrup, served conveniently in a cup."
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toTopOf="@+id/FoodBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/FoodImg"
        app:layout_constraintTop_toBottomOf="@+id/FM_FoodNames"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/FoodBtn"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:backgroundTint="#D9D9D9"
        android:fontFamily="@font/julee"
        android:text="View Recipe"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/FoodImg" />
</androidx.constraintlayout.widget.ConstraintLayout>